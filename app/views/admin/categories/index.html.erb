<div class="container-fluid">
  <div class="row">
    <div class="col-md-5">
      <h1>Kategorie</h1>
      <%= link_to new_admin_category_path, class: "btn btn-success mt-3" do %>
        <span class="fa fa-plus"></span> Dodaj nową kategorię
      <% end %>
    </div>
  </div>
</div>
<table class="table mt-5">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to "Edycja", edit_admin_category_path(category), class: "btn btn-warning btn-xs" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
