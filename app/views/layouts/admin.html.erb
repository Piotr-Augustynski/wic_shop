<!DOCTYPE html>
<html>
<head>
  <title>WicShop - Admin</title>
  <%= stylesheet_link_tag     'application',  media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag  'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="<%= admin_root_path %>">Robo shop::Admin</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item <% if params[:controller] == 'admin/products' %>active<% end %>"  ><%= link_to 'Produkty', admin_products_path, class: "nav-link" %></li>
        <li class="nav-item <% if params[:controller] == 'admin/categories' %>active<% end %>"  ><%= link_to 'Kategorie', admin_categories_path, class: "nav-link" %></li>
        <li class="nav-item <% if params[:controller] == 'admin/orders' %>active<% end %>"  ><%= link_to 'ZamÃ³wienia', admin_orders_path, class: "nav-link" %></li>
      </ul>
    </div>
  </nav>

  <div class="container-fluid mt-5">
    <% if flash[:notice].present?%>
      <div class="alert alert-success">
        <%= flash[:notice]%>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
